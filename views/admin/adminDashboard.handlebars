<h1>Previous Sales</h1>
{{#each soldHomes}}
  <div class="listing-item">
    <img src="{{this.image}}" alt="house" width="500">
    
    <h3>ID: {{this.id}} | Address: {{this.address}} | Title: {{this.title}}</h3>
    <p>Story: {{this.story}}</p>
    <a href="listing/{{this.id}}" class="details-link">Edit Listing</a>
    <button onclick="confirmDelete({{this.id}})">Delete</button>
  </div>
{{/each}}

<h1>Add Listing</h1>
<form action="/admin/addListing" method="POST">
  <label for="imageFile">Image File:</label>
  <input type="file" id="imageFile" name="imageFile" accept="image/png, image/jpeg"><br>
  <label for="address">Address:</label>
  <input type="text" id="address" name="address" required><br>
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required><br>
  <label for="story">Story:</label>
  <textarea id="story" name="story"></textarea><br>
  <button type="submit">Add Listing</button>
</form>