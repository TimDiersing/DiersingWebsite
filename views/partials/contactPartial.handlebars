<div class="contact-partial">
    <div class="left-side">
        <h1 class="main-text">{{heroText}}</h1>
        <a class="contact-button general-button" href="/contact">Contact Me</a>
    </div>
    <article class="contact-card">
        <img class="logo" src="/favicon.png" alt="logo">
        <h1 class="full-name">{{fullName}}</h1>
        <h2 class="number"><span class="material-symbols-outlined">call</span> {{phone}}</h2>
        <h2 class="email"><span class="material-symbols-outlined">mail</span> {{email}}</h2>
        <h2 class="office-address"><span class="material-symbols-outlined">apartment</span> {{officeShort}}</h2>
    </article>
</div>